@model List<EmployeeViewModel>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header custom-theme-1-bg">
                <h4 class="card-title">Employee List</h4>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>DOB</th>
                                    <th>Email</th>
                                    <th colspan="2">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var emp in Model)
                                {
                                    <tr>
                                        <td>@emp.Name</td>
                                        <td>@emp.Department</td>
                                        <td>@emp.DOB.ToString("MM/dd/yyyy")</td>
                                        <td>@emp.Email</td>
                                        <td><a href="#" onclick="onEditEmployee(@emp.Id)">Edit</a></td>
                                        <td><a href="#" onclick="showDeleteConfirmationModal(@emp.Id)">Delete</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div>No record found</div>
                }
            </div>
        </div>
    </div>
</div>

@{

}